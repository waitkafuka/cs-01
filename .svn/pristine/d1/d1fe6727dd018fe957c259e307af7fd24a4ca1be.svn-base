.train-des{
    margin-left:17px;
    float: left;
}
.train-des img{
    float: left;
}
.train-des h4,.train-des a{
    color: #01C49C;
}
.train-des p{
    line-height: 2.3;
    height: 54px;
}
.media-box{
    width: 100%;
    text-align: center;
    clear: both;
    padding-top: 23px;
}
.train-list-box{
    margin-top:22px;
}
.train-item-box{
    width: 273px;
    min-height: 362px;
    margin-right:23px;
    margin-bottom:20px;
    float: left;
}
.train-item-box h4{
    color: #02C29B;
    text-align: center;
    width: 100%;
    background: #FAFAFA;
    height: 37px;
    padding-top: 9px;
}
.train-item-box ul{
    padding:8px;
}
.train-item-box li{
    height: 23px;
    margin-top:5px;
    line-height: 1.9;
    border-bottom: 1px dashed #E7E7E7;
}
.train-item-box li:not(:first-child){
    list-style: disc inside;
}